Name                                 IP              Status   Type       Owner      Region      Age
<% @instances.each do |i| %>
<% tags   = i.tags %>
<% name   = tags.find{|t| t.key.eql?('Name')}&.value %>
<% owner  = tags.find{|t| t.key.eql?('Owner')}&.value %>
<% age    = ((Time.now - i.launch_time) / (24*3600)).to_i %>
<% region = i.placement.availability_zone.chop %>
<%="%-36s %-16s %-8s %-10s %-10s %-10s %3s days\n" % [name[0..35], i.public_ip_address, i.state.name, i.instance_type, owner, region, age] %>
<% end %>
