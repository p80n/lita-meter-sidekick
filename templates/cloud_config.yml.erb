#cloud-config

write_files:

coreos:
  units:
    - name: install-meterctl.service
      command: start
      content: |
        [Unit]
        Description=Install meterctl

        [Service]
        Type=oneshot
        ExecStartPre=/usr/bin/mkdir -p /opt/bin/
        ExecStart=/usr/bin/curl -o /opt/bin/meterctl-alpha https://s3.amazonaws.com/6fusion-meter-dev/coreos/alpha/meterctl
        ExecStart=/usr/bin/curl -o /opt/bin/meterctl https://s3.amazonaws.com/6fusion-meter-dev/coreos/<%= @version %>/meterctl
        ExecStartPost=/usr/bin/chmod +x /opt/bin/meterctl*
    - name: amazon-ssm-agent.service
      command: start
      content: |
        [Unit]
        Description=Amazon SSM Agent

        [Service]
        ExecStart=/opt/bin/amazon-ssm-agent

